package Exercicios;

import java.util.Scanner;

public class Multipla_Escolha_Contador  {


public static void main(String[] args) {
		
		Scanner entrada = new Scanner(System.in);
		
		int numero = 0;
		
		
		do  { 
			
			System.out.println("\n Normalmente, quantos litros de sangue uma pessoa tem? Em média, quantos são retirados numa doação de sangue?");
			numero = entrada.nextInt();
			
			
			switch (numero){

		     case 1:
		         System.out.println("\na) Tem entre 2 a 4 litros. São retirados 450 mililitros");
		         break;
		     case 2:
		         System.out.println("\nb) Tem entre 4 a 6 litros. São retirados 450 mililitros");
		         break;
		     case 3:
		         System.out.println("\nc) Tem 10 litros. São retirados 2 litros");
		         break;
		       
		     case 4:
		         System.out.println("\nd) Tem 7 litros. São retirados 1,5 litros");
		         break;
		         
		     case 5:
		         System.out.println("\ne) Tem 0,5 litros. São retirados 0,5 litros");
		         break;
		         
		    
		         
		}	
		}
	
		
		while(numero != 2);
		System.out.println("Certa Resposta !!");
	}
}

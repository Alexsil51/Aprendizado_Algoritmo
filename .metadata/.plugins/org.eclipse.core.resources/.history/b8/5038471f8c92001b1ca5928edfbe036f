package Exercicios;

import java.util.Scanner;

public class Multipla_Escolha_Contador  {


public static void main(String[] args) {
		
		Scanner entrada = new Scanner(System.in);
		
		
		int numero;
		int aaCount; 
		int bbCount;
		int ccCount;
		int ddCount;
		int eeCount;
		
		do  { 
			
			System.out.println("\n**Teste Seu Conhecimento** Normalmente, quantos litros de sangue uma pessoa tem? Em média, quantos são retirados numa doação de sangue?" + "\n\n1) Tem entre 2 a 4 litros. São retirados 450 mililitros"
			+ "\n\n2) Tem entre 4 a 6 litros. São retirados 450 mililitros" + "\n\n3) Tem 10 litros. São retirados 2 litros" + "\n\n4) Tem 7 litros. São retirados 1,5 litros" + "\n\n5) Tem 0,5 litros. São retirados 0,5 litros");
			numero = entrada.nextInt();
			
			
			
			switch (numero){

		     case 1:
		         System.out.println("\nTente Novamente");
		         break;
		     case 2:
		         System.out.println("\nCerta Resposta !!");
		         break;
		     case 3:
		         System.out.println("\nTente Novamente");
		         break;
		       
		     case 4:
		         System.out.println("\nTente Novamente");
		         break;
		         
		     case 5:
		         System.out.println("\nTente Novamente");
		         break;
		         
		    
		         
		}	
		}
	
		
		while(numero != 2);
		System.out.println("Obrigado !!");
	}
}
